<!--Content of the individual patient record-->
<table class="table table-stripped table-hover">

  <tr>
    <td>Name</td>
    <td><%= @patient.name %></td>
  </tr>
  <tr>
    <td>Date of birth</td>
    <td><%= @patient.date_of_birth %></td>
  </tr>
  <tr>
    <td>Address</td>
    <td><%= @patient.address %></td
    </tr>
  <tr>
    <td>Phone</td>
    <td><%= @patient.phone_no %></td>
  </tr>
  <tr>
    <td>Infection</td>
    <td><%= @patient.infection %></td>
  </tr>
  <tr>
    <td>Injury</td>
    <td><%= @patient.injury %></td>
  </tr>
  <tr>
    <td>Consultation</td>
    <td>
      <% @patient.consultations.each do |consultation| %>
        <p>
          <strong>CAT:</strong>
          <%= consultation.cat %>
        </p>
        <p>
          <strong>X-ray:</strong>
          <%= consultation.x_ray %>
        </p>
        <p>
          <strong>Others:</strong>
          <%= consultation.other %>
        </p>
        <p>
         <%= link_to 'Destroy Consultation', [consultation.patient, consultation], method: :delete,
         data: { confirm: 'Are you sure?' } %>
        </p>
        <br/>
      <% end %>
    </td>
  </tr>

  <tr colspan="2"></tr>
</table>
