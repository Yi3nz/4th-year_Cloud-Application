<!--The patient table-->
<div class="col-md-6">
  <div class="panel panel-success">
    <div class="panel-heading text-success text-center"><h1>Search result:</h1></div>
    <div class="panel-body">

      <!--Link to the partial code-->
      <% if @search.search_patients.empty? %>
        <p>No Records Found</p>
      <% else %>
        <% @search.search_patients.each do |c| %>
          <br>
          <div class="div">
            <h1><%= c.name %></h1>
            <p>Date of Birth: <%= c.date_of_birth%></p>
            <p>Address: <%= c.address%></p>
            <p>Phone: <%= c.phone_no%></p>
            <p>Infection: <%= c.infection%></p>
            <p>Injury: <%= c.injury%></p>
          <% end %>
        <% end %>

      <%= link_to 'Back', new_search_path %>

    </div>
  </div>
</div>
