<!--Add bootstrap to the form-->
<div class="col-md-6">
  <div class="panel panel-success">
    <div class="panel-heading text-success text-center"><h1>Individual Record:</h1></div>
    <div class="panel-body">

      <!--Content of the individual record-->
      <table class="table table-stripped table-hover">
        <tr>
          <td>Name</td>
          <td><%= @patient.name %></td>
        </tr>
        <tr>
          <td>Date of birth</td>
          <td><%= @patient.date_of_birth %></td>
        </tr>
        <tr>
          <td>Address</td>
          <td><%= @patient.address %></td
          </tr>
        <tr>
          <td>Phone</td>
          <td><%= @patient.phone_no %></td>
        </tr>
        <tr>
          <td>Infection</td>
          <td><%= @patient.infection %></td>
        </tr>
        <tr>
          <td>Injury</td>
          <td><%= @patient.injury %></td>
        </tr>
        <tr>
          <td>Consultation</td>
          <td>
            <% @patient.consultations.each do |consultation| %>
              <%= render @patient.consultations %>
            <% end %>
          </td>
        </tr>

        <tr colspan="2"></tr>
      </table>

      <%= link_to 'Edit', edit_patient_path(@patient) %>
      <%= link_to 'Back', patients_path %>

    </div>
  </div>
</div>

<!--The consultation form-->
<div class="col-md-6">
  <div class="panel panel-primary">
    <div class="panel-heading text-primary text-center"><h1>Add a consultation:</h1></div>
    <div class="panel-body">

      <!--Content of the form-->
      <!--Link to the partial code-->
      <%= render 'consultations/form' %></br>
      <%= link_to 'Back', patients_path %>

    </div>
  </div>
</div>
