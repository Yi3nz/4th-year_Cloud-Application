<h1>Patient List</h1>


<table>
 <tr>
   <th>Name</th>
   <th>Date of birth</th>
   <th colspan="3"></th>
 </tr>

 <% @patients.each do |patient| %>
   <tr>
     <td><%= link_to patient.name, patient %></td>
     <td><%= patient.date_of_birth %></td>
     <td><%= link_to 'Show', patient_path(patient) %></td>
     <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
     <td><%= link_to 'Destroy', patient_path(patient), method: :delete,
                                data: {confirm: 'Are you sure?'} %></td>
   </tr>
 <% end %>
</table>
