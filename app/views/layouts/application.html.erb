<!DOCTYPE html>
<html>
  <head>
    <title>Smartcare</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--Reference to the font-awesome icons-->
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.6.0/css/font-awesome.css" rel="stylesheet">

  </head>

  <body>
    <!--Create a nav bar-->
    <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <%= link_to "Patient List", patients_path, class:"navbar-brand" %>
          </div>
          <ul class="nav navbar-nav">
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% if current_user.present? %>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Log In", new_user_session_path %></li>
            <% end %>
          </ul>
          <% if user_signed_in? %>
            <%= link_to "New Patient", new_patient_path, class: "navbar-text navbar-link navbar-right" %>
          <% end %>
        </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
